      <p class="text-lg max-w-2xl mx-auto">Tailored DJ services for every special occasion</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <% const services = [
        {icon:'fa-ring', title:'Wedding DJ', text:'Perfectly curated music for your special day, from ceremony to reception.'},
        {icon:'fa-hand-holding-heart', title:'Engagement/Henna Night', text:'Traditional and modern mixes for your pre-wedding celebration.'},
        {icon:'fa-briefcase', title:'Corporate Events', text:'Professional entertainment for company parties and business gatherings.'},
        {icon:'fa-globe-americas', title:'Destination Shows', text:'International performances for events worldwide.'},
      ]; %>
      <% services.forEach((s, i) => { %>
        <div class="bg-cream p-8 rounded-lg shadow-md hover:shadow-xl transition will-animate" data-anim="card" style="--delay:<%= i * 0.05 %>s">
          <div class="text-gold text-4xl mb-4"><i class="fas <%= s.icon %>"></i></div>
          <h3 class="text-xl font-serif font-bold mb-3"><%= s.title %></h3>
          <p class="text-gray-700"><%= s.text %></p>
        </div>
      <% }) %>
    </div>
  </div>
</section>

