<section id="booking" class="py-20 bg-olive/10">
  <div class="container mx-auto px-6">
    <form action="/bookings" method="POST" class="bg-white rounded-xl shadow-md p-8 will-animate" data-anim="fade">
      <% if (typeof bookingStatus !== 'undefined' && bookingStatus) { %>
  <div class="mb-6 rounded-lg px-4 py-3 <%= bookingStatus==='ok' ? 'bg-green-50 text-green-700 border border-green-200' : 'bg-red-50 text-red-700 border border-red-200' %>">
    <% if (bookingStatus === 'ok') { %>
      <strong>Thank you!</strong> Your request has been received. I will contact you shortly.
    <% } else if (bookingStatus === 'val') { %>
      <strong>Missing info!</strong> Please fill in all required fields with valid details.
    <% } else { %>
      <strong>Error!</strong> Email could not be sent. Please try again.
    <% } %>
  </div>
<% } %>
  
      <h3 class="text-xl font-serif font-bold mb-6 text-center">Booking Request Form</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="relative">
          <input type="text" id="name" name="name" required 
                 class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                 placeholder=" ">
          <label for="name" class="floating">Full Name</label>
        </div>
        <div class="relative">
          <input type="email" id="email" name="email" required 
                 class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                 placeholder=" ">
          <label for="email" class="floating">Email Address</label>
        </div>
        <div class="relative">
          <input type="tel" id="phone" name="phone" required 
                 class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                 placeholder=" ">
          <label for="phone" class="floating">Phone Number</label>
        </div>
        <div class="relative">
          <select id="event-type" name="eventType" required 
          class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold appearance-none">
            <option value="" disabled selected></option>
            <option value="wedding">Wedding</option>
            <option value="engagement">Engagement/Henna Night</option>
            <option value="corporate">Corporate Event</option>
            <option value="private">Private Party</option>
            <option value="other">Other</option>
          </select>
          <label for="event-type" class="floating">Event Type</label>
          <i class="fas fa-chevron-down absolute right-4 top-3 text-gray-400"></i>
        </div>

        <!-- ✅ Tarih kısmı min ve max ile güncellendi -->
        <div class="relative md:col-span-2">
          <input type="date" id="event-date" name="eventDate" 
                 min="1900-01-01" max="2099-12-31" required
                 class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                 placeholder=" ">
          <label for="event-date" class="floating">Event Date</label>
        </div>

        <div class="relative md:col-span-2">
          <textarea id="message" name="message" rows="4" 
                    class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                    placeholder=" "></textarea>
          <label for="message" class="floating">Event Details & Special Requests</label>
        </div>
      </div>
      <div class="mt-8 text-center">
        <button type="submit" 
                class="bg-gold hover:bg-opacity-90 text-white px-8 py-3 rounded-full font-medium transition will-animate" 
                data-anim="pop">Submit Booking Request</button>
      </div>
    </form>
  </div>
</section>


