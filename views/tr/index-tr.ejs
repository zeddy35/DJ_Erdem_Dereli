<section id="booking" class="py-20 bg-olive/10">
  <div class="container mx-auto px-6">
    <form action="/bookings" method="POST" class="bg-white rounded-xl shadow-md p-8 will-animate" data-anim="fade">
      <% if (typeof bookingStatus !== 'undefined' && bookingStatus) { %>
  <div class="mb-6 rounded-lg px-4 py-3 <%= bookingStatus==='ok' ? 'bg-green-50 text-green-700 border border-green-200' : 'bg-red-50 text-red-700 border border-red-200' %>">
    <% if (bookingStatus === 'ok') { %>
      <strong>Teşekkürler!</strong> Talebiniz alındı, en kısa sürede sizinle iletişime geçeceğim.
    <% } else if (bookingStatus === 'val') { %>
      <strong>Eksik bilgi!</strong> Lütfen tüm zorunlu alanları geçerli şekilde doldurun.
    <% } else { %>
      <strong>Hata!</strong> Mail gönderilemedi. Lütfen tekrar deneyin.
    <% } %>
  </div>
<% } %>

      <h3 class="text-xl font-serif font-bold mb-6 text-center">Rezervasyon Talep Formu</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="relative">
          <input type="text" id="name" name="name" required 
                 class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                 placeholder=" ">
          <label for="name" class="floating">Ad Soyad</label>
        </div>
        <div class="relative">
          <input type="email" id="email" name="email" required 
                 class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                 placeholder=" ">
          <label for="email" class="floating">E-posta Adresi</label>
        </div>
        <div class="relative">
          <input type="tel" id="phone" name="phone" required 
                 class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                 placeholder=" ">
          <label for="phone" class="floating">Telefon Numarası</label>
        </div>
        <div class="relative">
          <select id="event-type" name="eventType" required 
          class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold appearance-none">
            <option value="" disabled selected></option>
            <option value="wedding">Düğün</option>
            <option value="engagement">Nişan/Kına Gecesi</option>
            <option value="corporate">Kurumsal Etkinlik</option>
            <option value="private">Özel Parti</option>
            <option value="other">Diğer</option>
          </select>
          <label for="event-type" class="floating">Etkinlik Türü</label>
          <i class="fas fa-chevron-down absolute right-4 top-3 text-gray-400"></i>
        </div>

        <!-- ✅ Date field with min/max kept; labels translated -->
        <div class="relative md:col-span-2">
          <input type="date" id="event-date" name="eventDate" 
                 min="1900-01-01" max="2099-12-31" required
                 class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                 placeholder=" ">
          <label for="event-date" class="floating">Etkinlik Tarihi</label>
        </div>

        <div class="relative md:col-span-2">
          <textarea id="message" name="message" rows="4" 
                    class="peer w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gold" 
                    placeholder=" "></textarea>
          <label for="message" class="floating">Etkinlik Detayları & Özel Talepler</label>
        </div>
      </div>
      <div class="mt-8 text-center">
        <button type="submit" 
                class="bg-gold hover:bg-opacity-90 text-white px-8 py-3 rounded-full font-medium transition will-animate" 
                data-anim="pop">Rezervasyon Talebini Gönder</button>
      </div>
    </form>
  </div>
</section>

